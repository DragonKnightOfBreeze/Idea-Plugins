{
  "definitions" : {
    "anomaly" : {
      "type" : "object",
      "properties" : {
        "should_ai_use" : {
          "type" : "boolean",
          "default" : false
        },
        "show_ai_and_humans_use" : {
          "type" : "boolean",
          "default" : false
        },
        "desc" : {
          "$ref" : "#/definitions/desc"
        },
        "picture" : {
          "$ref" : "#/definitions/gfx_reference"
        },
        "level" : {
          "type" : "integer"
        },
        "null_spawn_chance" : {
          "type" : "number"
        },
        "max_once" : {
          "type" : "boolean",
          "default" : false
        },
        "max_once_global" : {
          "type" : "boolean",
          "default" : false
        },
        "spawn_chance" : {
          "$ref" : "#/definitions/weight_modifier"
        },
        "on_spawn" : {
          "$ref" : "#/definitions/anomaly_event"
        },
        "on_success" : {
          "$ref" : "#/definitions/anomaly_event"
        }
      }
    },
    "anomaly_event" : {
      "anyOf" : [ {
        "$ref" : "#/definitions/scripted_event_id"
      }, {
        "propertyNames" : {
          "type" : "integer"
        },
        "additionalProperties" : {
          "anyOf" : [ {
            "$ref" : "#/definitions/scripted_event_id"
          }, {
            "$ref" : "#/definitions/modifier",
            "properties" : {
              "max_once" : {
                "type" : "boolean",
                "default" : true
              },
              "max_once_global" : {
                "type" : "boolean",
                "default" : false
              },
              "anomaly_event" : {
                "$ref" : "#/definitions/scripted_event_id"
              }
            }
          } ]
        }
      } ]
    },
    "desc" : {
      "anyOf" : [ {
        "$ref" : "#/definitions/loc_reference"
      }, {
        "$ref" : "#/definitions/triggered_desc"
      } ]
    },
    "weight_modifier" : {
      "type" : "object",
      "properties" : {
        "base" : {
          "type" : "number"
        },
        "modifier" : {
          "$ref" : "#/definitions/modifier",
          "multiple" : true
        }
      }
    },
    "modifier" : {
      "type" : "object"
    },
    "scripted_event_id" : {
      "anyOf" : [ {
        "$ref" : "#/definitions/event_id"
      }, {
        "anyOf" : [ {
          "$ref" : "#/definitions/modifiers"
        }, {
          "properties" : {
            "id" : {
              "type" : "string"
            }
          },
          "additionalProperties" : true
        } ]
      } ]
    },
    "gfx_reference" : {
      "type" : "string",
      "$def" : "interface/**/*.gfx/#/{spliteType}/name"
    },
    "triggered_desc" : {
      "$ref" : "#/definitions/triggers",
      "properties" : {
        "text" : {
          "$ref" : "#/definitions/loc_reference"
        }
      }
    },
    "modifiers" : {
      "type" : "object"
    },
    "loc_reference" : {
      "type" : "string",
      "anyOf" : [ {
        "$def" : "localisation/**/*.yml/#/{property}"
      }, {
        "$def" : "localisation_synced/**/*.yml/#/{property}"
      } ]
    },
    "event_id" : {
      "type" : "string",
      "$def" : "events/*.txt/#/{event}/id"
    },
    "triggers" : {
      "type" : "object",
      "anyOf" : [ {
        "$ref" : "#/definitions/condition_expressions"
      }, {
        "$ref" : "#/definitions/boolean_expressions"
      }, {
        "$ref" : "#/definitions/scope_expressions"
      }, {
        "$ref" : "#/definitions/scripted_triggers"
      } ]
    },
    "condition_expressions" : {
      "type" : "object",
      "propertyNames" : {
        "$ref" : "#/definitions/condition_expression_name"
      },
      "properties" : {
        "limit" : {
          "$ref" : "#/definitions/triggers"
        }
      },
      "additionalProperties" : {
        "$ref" : "#/definitions/triggers"
      }
    },
    "boolean_expressions" : {
      "type" : "object",
      "propertyNames" : {
        "$ref" : "#/definitions/boolean_expression_name"
      },
      "additionalProperties" : {
        "$ref" : "#/definitions/triggers"
      }
    },
    "scope_expressions" : {
      "type" : "object",
      "propertyNames" : {
        "$ref" : "#/definitions/scope_name"
      },
      "additionalProperties" : {
        "$ref" : "#/definitions/triggers"
      }
    },
    "scripted_triggers" : {
      "type" : "object",
      "additionalProperties" : true,
      "$type" : "scripted_trigger"
    },
    "condition_expression_name" : {
      "type" : "string",
      "enum" : [ "AND", "OR", "NOT", "NAND", "NOR" ]
    },
    "boolean_expression_name" : {
      "type" : "string",
      "enum" : [ "if", "else", "else_if", "AND", "OR", "NOT", "NAND", "NOR" ]
    },
    "scope_name" : {
      "type" : "string",
      "enum" : [ "capital", "controller", "root", "from", "owner", "planet", "prev", "random", "this", "pop" ]
    }
  },
  "type" : "object",
  "additionalProperties" : {
    "$ref" : "#/definitions/anomaly"
  }
}