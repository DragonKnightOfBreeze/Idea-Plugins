{
  "definitions" : {
    "building" : {
      "type" : "object",
      "properties" : {
        "base_buildtime" : {
          "type" : "integer"
        },
        "base_cap_amount" : {
          "type" : "integer",
          "optional" : true
        },
        "capital" : {
          "type" : "boolean"
        },
        "can_build" : {
          "type" : "boolean"
        },
        "can_demolish" : {
          "type" : "boolean"
        },
        "can_be_ruined" : {
          "type" : "boolean"
        },
        "can_be_disabled" : {
          "type" : "boolean"
        },
        "category" : {
          "$ref" : "#/definitions/building_category"
        },
        "potential" : {
          "$ref" : "#/definitions/triggers"
        },
        "convert_to" : {
          "type" : "array",
          "items" : {
            "$type" : "building"
          }
        },
        "planet_modifier" : {
          "$ref" : "#/definitions/modifier"
        },
        "destroy_trigger" : {
          "$ref" : "#/definitions/triggers"
        },
        "allow" : {
          "$ref" : "#/definitions/triggers"
        },
        "triggered_plant_modifier" : {
          "$ref" : "#/definitions/triggered_modifier"
        },
        "resources" : {
          "$ref" : "#/definitions/economy_unit"
        },
        "upgrades" : {
          "type" : "array",
          "items" : {
            "$type" : "building"
          }
        },
        "prerequisites" : {
          "type" : "array",
          "items" : {
            "$type" : "building"
          }
        },
        "triggered_desc" : {
          "$ref" : "#/definitions/triggered_desc",
          "multiple" : true
        },
        "on_queued" : {
          "$ref" : "#/definitions/effects"
        },
        "on_unqueued" : {
          "$ref" : "#/definitions/effects"
        },
        "on_built" : {
          "$ref" : "#/definitions/effects"
        },
        "on_destroy" : {
          "$ref" : "#/definitions/effects"
        },
        "ai_weight" : {
          "$ref" : "#/definitions/weight_modifier"
        }
      }
    },
    "building_category" : {
      "type" : "string",
      "enum" : [ "government", "planet_buildings", "pop_assembly", "resource", "manufacturing", "research", "trade", "amenity", "unity", "army" ]
    },
    "economy_unit" : {
      "type" : "object",
      "properties" : {
        "category" : {
          "$ref" : "#/definitions/resources_category"
        },
        "produces" : {
          "$ref" : "#/definitions/resources_item"
        },
        "cost" : {
          "$ref" : "#/definitions/resources_item"
        },
        "upkeep" : {
          "$ref" : "#/definitions/resources_item"
        }
      }
    },
    "triggered_desc" : {
      "$ref" : "#/definitions/triggers",
      "properties" : {
        "text" : {
          "$ref" : "#/definitions/loc_reference"
        }
      }
    },
    "triggers" : {
      "type" : "object",
      "anyOf" : [ {
        "$ref" : "#/definitions/condition_expressions"
      }, {
        "$ref" : "#/definitions/boolean_expressions"
      }, {
        "$ref" : "#/definitions/scope_expressions"
      }, {
        "$ref" : "#/definitions/scripted_triggers"
      } ]
    },
    "effects" : {
      "type" : "object",
      "anyOf" : [ {
        "$ref" : "#/definitions/condition_expressions"
      }, {
        "$ref" : "#/definitions/boolean_expressions"
      }, {
        "$ref" : "#/definitions/scope_expressions"
      }, {
        "$ref" : "#/definitions/scripted_triggers"
      } ]
    },
    "weight_modifier" : {
      "type" : "object",
      "properties" : {
        "base" : {
          "type" : "number"
        },
        "modifier" : {
          "$ref" : "#/definitions/modifier",
          "multiple" : true
        }
      }
    },
    "modifier" : {
      "type" : "object",
      "additionalProperties" : true
    },
    "triggered_modifier" : {
      "type" : "object",
      "properties" : {
        "potential" : {
          "$ref" : "#/definitions/triggers"
        }
      },
      "$ref" : "#/definitions/modifiers"
    },
    "loc_reference" : {
      "type" : "string"
    },
    "resources_category" : true,
    "resources_item" : {
      "type" : "object",
      "anyOf" : [ {
        "properties" : {
          "trigger" : {
            "$ref" : "#/definitions/triggers"
          }
        }
      }, {
        "propertyNames" : {
          "$type" : "resource"
        },
        "additionalProperties" : {
          "type" : "integer"
        }
      } ]
    },
    "condition_expressions" : {
      "type" : "object",
      "propertyNames" : {
        "$ref" : "#/definitions/condition_expression_name"
      },
      "properties" : {
        "limit" : {
          "$ref" : "#/definitions/triggers"
        }
      },
      "additionalProperties" : {
        "$ref" : "#/definitions/triggers"
      }
    },
    "boolean_expressions" : {
      "type" : "object",
      "propertyNames" : {
        "$ref" : "#/definitions/boolean_expression_name"
      },
      "additionalProperties" : {
        "$ref" : "#/definitions/triggers"
      }
    },
    "scope_expressions" : {
      "type" : "object",
      "propertyNames" : {
        "$ref" : "#/definitions/scope_name"
      },
      "additionalProperties" : {
        "$ref" : "#/definitions/triggers"
      }
    },
    "scripted_triggers" : {
      "type" : "object",
      "additionalProperties" : true,
      "$type" : "scripted_trigger"
    },
    "modifiers" : {
      "type" : "object",
      "additionalProperties" : true
    },
    "condition_expression_name" : {
      "type" : "string",
      "enum" : [ "AND", "OR", "NOT", "NAND", "NOR" ]
    },
    "boolean_expression_name" : {
      "type" : "string",
      "enum" : [ "if", "else", "else_if", "AND", "OR", "NOT", "NAND", "NOR" ]
    },
    "scope_name" : {
      "type" : "string",
      "enum" : [ "capital", "controller", "root", "from", "owner", "planet", "prev", "random", "this", "pop" ]
    }
  },
  "type" : "object",
  "additionalProperties" : {
    "$ref" : "#/definitions/building"
  }
}