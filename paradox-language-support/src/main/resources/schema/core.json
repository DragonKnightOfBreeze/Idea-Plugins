{
  "definitions" : {
    "integer_range" : {
      "type" : "object",
      "properties" : {
        "min" : {
          "type" : "integer"
        },
        "max" : {
          "type" : "integer"
        }
      }
    },
    "number_range" : {
      "type" : "object",
      "properties" : {
        "min" : {
          "type" : "number"
        },
        "max" : {
          "type" : "number"
        }
      }
    },
    "vector2" : {
      "type" : "object",
      "properties" : {
        "x" : {
          "type" : "integer"
        },
        "y" : {
          "type" : "integer"
        }
      }
    },
    "vector3" : {
      "type" : "object",
      "properties" : {
        "x" : {
          "type" : "integer"
        },
        "y" : {
          "type" : "integer"
        },
        "z" : {
          "type" : "integer"
        }
      }
    },
    "color" : {
      "type" : "array",
      "items" : {
        "type" : "integer"
      },
      "minItems" : 3,
      "maxItems" : 3
    },
    "economy_unit" : {
      "type" : "object",
      "properties" : {
        "category" : {
          "$type" : "economic_category"
        },
        "produces" : {
          "$ref" : "#/definitions/resources_item"
        },
        "cost" : {
          "$ref" : "#/definitions/resources_item"
        },
        "upkeep" : {
          "$ref" : "#/definitions/resources_item"
        }
      }
    },
    "resources_item" : {
      "type" : "object",
      "anyOf" : [ {
        "properties" : {
          "trigger" : {
            "$ref" : "#/definitions/triggers"
          }
        }
      }, {
        "propertyNames" : {
          "$type" : "resource"
        },
        "additionalProperties" : {
          "type" : "integer"
        }
      } ]
    },
    "entity" : true,
    "desc" : {
      "anyOf" : [ {
        "$ref" : "#/definitions/loc_reference"
      }, {
        "$ref" : "#/definitions/triggered_desc"
      } ]
    },
    "triggered_desc" : {
      "$ref" : "#/definitions/triggers",
      "properties" : {
        "text" : {
          "$ref" : "#/definitions/loc_reference"
        }
      }
    },
    "modified_attraction" : {
      "properties" : {
        "value" : {
          "type" : "integer"
        },
        "modifier" : {
          "$ref" : "#/definitions/modifier"
        }
      }
    },
    "condition_expressions" : {
      "type" : "object",
      "propertyNames" : {
        "$ref" : "#/definitions/condition_expression_name"
      },
      "properties" : {
        "limit" : {
          "$ref" : "#/definitions/triggers"
        }
      },
      "additionalProperties" : {
        "$ref" : "#/definitions/triggers"
      }
    },
    "condition_expression_name" : {
      "type" : "string",
      "enum" : [ "AND", "OR", "NOT", "NAND", "NOR" ]
    },
    "boolean_expressions" : {
      "type" : "object",
      "propertyNames" : {
        "$ref" : "#/definitions/boolean_expression_name"
      },
      "additionalProperties" : {
        "$ref" : "#/definitions/triggers"
      }
    },
    "boolean_expression_name" : {
      "type" : "string",
      "enum" : [ "if", "else", "else_if", "AND", "OR", "NOT", "NAND", "NOR" ]
    },
    "scope_expressions" : {
      "type" : "object",
      "propertyNames" : {
        "$ref" : "#/definitions/scope_name"
      },
      "additionalProperties" : {
        "$ref" : "#/definitions/triggers"
      }
    },
    "scope_name" : {
      "type" : "string",
      "enum" : [ "capital", "controller", "root", "from", "owner", "planet", "prev", "random", "this", "pop" ]
    },
    "triggers" : {
      "type" : "object",
      "anyOf" : [ {
        "$ref" : "#/definitions/condition_expressions"
      }, {
        "$ref" : "#/definitions/boolean_expressions"
      }, {
        "$ref" : "#/definitions/scope_expressions"
      }, {
        "$ref" : "#/definitions/scripted_triggers"
      } ]
    },
    "scripted_triggers" : {
      "type" : "object",
      "additionalProperties" : true,
      "$type" : "scripted_trigger"
    },
    "effects" : {
      "type" : "object",
      "anyOf" : [ {
        "$ref" : "#/definitions/condition_expressions"
      }, {
        "$ref" : "#/definitions/boolean_expressions"
      }, {
        "$ref" : "#/definitions/scope_expressions"
      }, {
        "$ref" : "#/definitions/scripted_triggers"
      } ]
    },
    "scripted_effects" : {
      "type" : "object",
      "additionalProperties" : true,
      "$type" : "scripted_effect"
    },
    "weight" : {
      "type" : "object",
      "properties" : {
        "weight" : {
          "type" : "number"
        },
        "modifier" : {
          "$ref" : "#/definitions/modifier",
          "multiple" : true
        }
      }
    },
    "weight_modifier" : {
      "type" : "object",
      "properties" : {
        "base" : {
          "type" : "number"
        },
        "modifier" : {
          "$ref" : "#/definitions/modifier",
          "multiple" : true
        }
      }
    },
    "random_weight" : {
      "type" : "object",
      "properties" : {
        "value" : {
          "type" : "integer"
        }
      }
    },
    "modifiers" : {
      "type" : "object"
    },
    "modifier" : {
      "type" : "object"
    },
    "triggered_modifiers" : {
      "type" : "object",
      "properties" : {
        "potential" : {
          "$ref" : "#/definitions/triggers"
        }
      },
      "$ref" : "#/definitions/modifiers"
    },
    "event" : {
      "anyOf" : [ {
        "$ref" : "#/definitions/scripted_event_id"
      }, {
        "propertyNames" : {
          "$ref" : "#/definitions/event_type"
        },
        "additionalProperties" : {
          "$ref" : "#/definitions/scripted_event_id"
        }
      } ]
    },
    "scripted_event_id" : {
      "anyOf" : [ {
        "$ref" : "#/definitions/event_id"
      }, {
        "anyOf" : [ {
          "$ref" : "#/definitions/modifiers"
        }, {
          "properties" : {
            "id" : {
              "type" : "string"
            }
          },
          "additionalProperties" : true
        } ]
      } ]
    },
    "event_type" : {
      "type" : "string"
    },
    "triggered_tooltip" : {
      "$ref" : "#/definitions/triggers",
      "fail_text" : {
        "$ref" : "#/definitions/loc_reference"
      }
    },
    "game_path" : {
      "type" : "string"
    },
    "shortcut" : {
      "type" : "string"
    },
    "language" : {
      "type" : "string",
      "enum" : [ "l_simp_chinese", "l_english", "l_braz_por", "l_french", "l_german", "l_ponish", "l_russian", "l_spanish", "l_default" ]
    },
    "component_size" : {
      "type" : "string",
      "enum" : [ "small", "medium", "large", "extra_large", "point_defence", "torpedo", "titanic", "planet_killer", "aux" ]
    },
    "component_type" : {
      "type" : "string",
      "enum" : [ "weapon", "instant", "missile", "strike_craft", "point_defence", "planet_killer" ]
    },
    "color_reference" : {
      "type" : "string",
      "$def" : "common/colors/#/{color}"
    },
    "loc_reference" : {
      "type" : "string",
      "anyOf" : [ {
        "$def" : "localisation/**/*.yml/#/{property}"
      }, {
        "$def" : "localisation_synced/**/*.yml/#/{property}"
      } ]
    },
    "gfx_reference" : {
      "type" : "string",
      "$def" : "interface/**/*.gfx/#/{spliteType}/name"
    },
    "assert_reference" : {
      "type" : "string"
    },
    "event_id" : {
      "type" : "string",
      "$def" : "events/*.txt/#/{event}/id"
    },
    "scripted_loc_name" : {
      "type" : "string",
      "$def" : "scripted_loc/*.txt/#/{scripted_loc}/name"
    }
  }
}