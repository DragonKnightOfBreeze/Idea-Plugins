{
  "title" : "Deposits",
  "type" : "object",
  "additionalProperties" : {
    "$ref" : "#/definitions/deposit"
  },
  "definitions" : {
    "deposit" : {
      "title" : "Deposit",
      "type" : "object",
      "properties" : {
        "is_null" : {
          "type" : "boolean"
        },
        "time" : {
          "type" : "integer"
        },
        "is_for_colonizeable" : {
          "type" : "boolean"
        },
        "category" : {
          "$type" : "deposit_category"
        },
        "resources" : {
          "$ref" : "#/definitions/economy_unit"
        },
        "potential" : {
          "$ref" : "#/definitions/triggers"
        },
        "plant_modifier" : {
          "$ref" : "#/definitions/modifier"
        },
        "drop_weight" : {
          "$ref" : "#/definitions/weight_modifier"
        },
        "ai_weight" : {
          "$ref" : "#/definitions/weight_modifier"
        },
        "prerequisites" : {
          "type" : "array",
          "items" : {
            "$type" : "tech"
          }
        }
      }
    },
    "economy_unit" : {
      "type" : "object",
      "properties" : {
        "category" : {
          "$type" : "economic_category"
        },
        "produces" : {
          "$ref" : "#/definitions/resources_item"
        },
        "cost" : {
          "$ref" : "#/definitions/resources_item"
        },
        "upkeep" : {
          "$ref" : "#/definitions/resources_item"
        }
      }
    },
    "triggers" : {
      "type" : "object",
      "anyOf" : [ {
        "$ref" : "#/definitions/condition_expressions"
      }, {
        "$ref" : "#/definitions/boolean_expressions"
      }, {
        "$ref" : "#/definitions/scope_expressions"
      }, {
        "$ref" : "#/definitions/scripted_triggers"
      } ]
    },
    "weight_modifier" : {
      "type" : "object",
      "properties" : {
        "base" : {
          "type" : "number"
        },
        "modifier" : {
          "$ref" : "#/definitions/modifier",
          "multiple" : true
        }
      }
    },
    "modifier" : {
      "type" : "object"
    },
    "resources_item" : {
      "type" : "object",
      "anyOf" : [ {
        "properties" : {
          "trigger" : {
            "$ref" : "#/definitions/triggers"
          }
        }
      }, {
        "propertyNames" : {
          "$type" : "resource"
        },
        "additionalProperties" : {
          "type" : "integer"
        }
      } ]
    },
    "condition_expressions" : {
      "type" : "object",
      "propertyNames" : {
        "$ref" : "#/definitions/condition_expression_name"
      },
      "properties" : {
        "limit" : {
          "$ref" : "#/definitions/triggers"
        }
      },
      "additionalProperties" : {
        "$ref" : "#/definitions/triggers"
      }
    },
    "boolean_expressions" : {
      "type" : "object",
      "propertyNames" : {
        "$ref" : "#/definitions/boolean_expression_name"
      },
      "additionalProperties" : {
        "$ref" : "#/definitions/triggers"
      }
    },
    "scope_expressions" : {
      "type" : "object",
      "propertyNames" : {
        "$ref" : "#/definitions/scope_name"
      },
      "additionalProperties" : {
        "$ref" : "#/definitions/triggers"
      }
    },
    "scripted_triggers" : {
      "type" : "object",
      "additionalProperties" : true,
      "$type" : "scripted_trigger"
    },
    "condition_expression_name" : {
      "type" : "string",
      "enum" : [ "AND", "OR", "NOT", "NAND", "NOR" ]
    },
    "boolean_expression_name" : {
      "type" : "string",
      "enum" : [ "if", "else", "else_if", "AND", "OR", "NOT", "NAND", "NOR" ]
    },
    "scope_name" : {
      "type" : "string",
      "enum" : [ "capital", "controller", "root", "from", "owner", "planet", "prev", "random", "this", "pop" ]
    }
  }
}